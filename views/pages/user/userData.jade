extends ../../layout

block content
  .f-content
    .set-data
      form.pure-form.pure-form-aligned(method="post" action="/user/#{user._id}/data" enctype='multipart/form-data')
        div.pure-control-group
          label 昵称:
          input.pure-input-2-3(name="user[name]",type="text",value="#{user.name}")
        div.pure-control-group
          label 年龄:
          input.pure-input-2-3(name="user[age]",type="text",value="#{user.data.age}")
        div.pure-control-group
          label 头像:
          input.pure-input-2-3(name="user[avt]",type="file")
        div.pure-control-group
          label 注册时间:
          input.pure-input-2-3(name="user[registTime]",type="text",value="user.data.registTime")
        div.pure-control-group
          label个人简介:
          input.pure-input-2-3(name="user[info]",type="text",value="user.data.info")
        div.text-center.pure-control-group
          input.pure-button.pure-button-primary.pure-input-2-3(type="submit",value="保存")