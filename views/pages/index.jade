extends ../layout

block content
  #index
    h1 哆啦马
    hr
    each cat in categories
      .panel.panel-default
        .panel-heading
          h3
            a(href="/cat/#{cat.id}") #{cat.name}
        .panel-body
          if cat.dramas
            each drama in cat.dramas
              .thumbnail
                a(href="/drama/#{drama.id}")
                  img(src="#{drama.poster}", alt="#{drama.name}")
                .caption
                  h4 #{drama.name}